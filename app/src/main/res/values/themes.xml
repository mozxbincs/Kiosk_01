<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.Kiosk02" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- 기본 배경색 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 상태바 색상 및 아이콘 -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 기본 텍스트 색상 -->
        <item name="android:textColor">@color/black</item>
        <!-- 버튼 스타일 -->
        <item name="buttonStyle">@style/KioskButtonStyle</item>
        <!-- 입력란(EditText) 스타일 -->
        <item name="editTextStyle">@style/KioskEditTextStyle</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- 버튼 스타일 -->
    <style name="KioskButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#03C473</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- 입력란(EditText) 스타일 -->
    <style name="KioskEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">#D0CFCF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.Kiosk02" parent="Base.Theme.Kiosk02" />
</resources>