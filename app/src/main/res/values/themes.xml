<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.Kiosk02" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- 기본 배경색 -->
        <item name="colorPrimary">@color/navy01</item>
        <item name="colorPrimaryVariant">@color/navy01</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="KioskButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#03C473</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- 입력란(EditText) 스타일 -->
    <style name="KioskEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">#D0CFCF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.Kiosk02" parent="Base.Theme.Kiosk02" />
</resources>