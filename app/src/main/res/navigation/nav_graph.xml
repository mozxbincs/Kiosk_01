<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment"> <!-- 기본 시작 목적지로 설정 -->


    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.kiosk02.admin.AdminFragment"
        android:label="Admin Fragment"
        tools:layout="@layout/fragment_admin" />
    <action
        android:id="@+id/action_to_adminFragment"
        app:destination="@id/adminFragment" />
    <fragment
        android:id="@+id/findEmailAdminFragment"
        android:name="com.example.kiosk02.admin.FindEmailAdminFragment"
        android:label="이메일 찾기" />
    <fragment
        android:id="@+id/findPasswordAdminFragment"
        android:name="com.example.kiosk02.admin.FindPasswordAdminFragment"
        android:label="비밀번호 찾기" />
    <fragment
        android:id="@+id/resetPasswordAdminFragment"
        android:name="com.example.kiosk02.admin.ResetPasswordAdminFragment"
        android:label="비밀번호 재설정" />
    <fragment
        android:id="@+id/adminActivity"
        android:name="com.example.kiosk02.admin.AdminActivity"
        android:label="관리자 로그인" />
    <fragment
        android:id="@+id/adminSignFragment"
        android:name="com.example.kiosk02.admin.AdminSignFragment"
        android:label="관리자 회원가입" />
    <fragment
        android:id="@+id/addInformActivity"
        android:name="com.example.kiosk02.admin.AddInformActivity"
        android:label="추가정보등록" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.kiosk02.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/showEmailAdminFragment"
        android:name="com.example.kiosk02.admin.ShowEmailAdminFragment"
        android:label="ShowEmailAdminFragment" />

    <fragment
        android:id="@+id/adminMenuListFragment"
        android:name="com.example.kiosk02.admin.menu.data.AdminMenuListFragment"
        android:label="AdminMenuListFragment"
        tools:layout="@layout/fragment_admin_menu_list"/>

    <fragment
        android:id="@+id/editMenuFragment"
        android:name="com.example.kiosk02.admin.menu.data.EditMenuFragment"
        android:label="EditMenuFragment"
        tools:layout="@layout/fragment_edit_menu">
        <argument
            android:name="menuModel"
            app:argType="com.example.kiosk02.admin.menu.data.MenuModel"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/manageCategoriesFragment"
        android:name="com.example.kiosk02.admin.menu.data.ManageCategoriesFragment"
        android:label="ManageCategoriesFragment"
        tools:layout="@layout/fragment_manage_categories"/>

    <fragment
        android:id="@+id/menuListFragment"
        android:name="com.example.kiosk02.admin.menu.data.MenuListFragment"
        android:label="MenuListFragment"
        tools:layout="@layout/fragment_menu_list"/>

    <fragment
        android:id="@+id/ConsumerMenuList"
        android:name="com.example.kiosk02.customer.menu.ConsumerMenuListFragment"
        android:label="ConsumerMenuList"
        tools:layout="@layout/fragment_consumer_menu_list"/>

    <fragment
        android:id="@+id/ConsumerOrderFragment"
        android:name="com.example.kiosk02.customer.menu.ConsumerOrderFragment"
        android:label="ConsumerOrderFragment"
        tools:layout="@layout/fragment_consumer_order_fragment"/>

    <fragment
        android:id="@+id/ConsumerCartFragment"
        android:name="com.example.kiosk02.customer.menu.ConsumerCartFragment"
        android:label="ConsumerOrderFragment"
        tools:layout="@layout/fragment_consumer_cart"/>

    <action
        android:id="@+id/action_to_mainFragment"
        app:destination="@id/mainFragment" />

    <action
        android:id="@+id/action_to_find_email_admin"
        app:destination="@id/findEmailAdminFragment" />
    <action
        android:id="@+id/action_to_find_password_admin"
        app:destination="@id/findPasswordAdminFragment" />
    <action
        android:id="@+id/action_to_reset_password_admin"
        app:destination="@id/resetPasswordAdminFragment" />
    <action
        android:id="@+id/action_to_admin_sign_fragment"
        app:destination="@id/adminSignFragment" />

    <action
        android:id="@+id/action_to_admin_activity"
        app:destination="@id/adminActivity" />

    <action
        android:id="@+id/action_to_add_inform_activity"
        app:destination="@id/addInformActivity" />

    <action
        android:id="@+id/action_to_show_email_admin"
        app:destination="@id/showEmailAdminFragment" />

    <action
        android:id="@+id/action_to_admin_menu_list_fragment"
        app:destination="@id/adminMenuListFragment" />

    <action
        android:id="@+id/action_to_edit_menu_fragment"
        app:destination="@id/editMenuFragment"/>

    <action
        android:id="@+id/action_to_manage_categories_fragment"
        app:destination="@id/manageCategoriesFragment"/>

    <action
        android:id="@+id/action_to_ConsumerMenuList"
        app:destination="@id/ConsumerMenuList" />

    <action
        android:id="@+id/action_to_ConsumerOrderFragment"
        app:destination="@id/ConsumerOrderFragment"/>

    <action
        android:id="@+id/action_to_ConsumerCartFragment"
        app:destination="@id/ConsumerCartFragment"/>



</navigation>
