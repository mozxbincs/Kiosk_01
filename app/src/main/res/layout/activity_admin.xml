<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_admin_panel_settings_24" />

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="관리자"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
       >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/orderCheckButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="#F9CF9F"
            android:src="@drawable/baseline_fact_check_24"
            android:textColor="@color/black" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문확인"
        android:textSize="18sp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/paymentCheckButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F9CF9F"

                android:src="@drawable/baseline_price_check_24"
                android:textColor="@color/black" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자리 + 결제확인"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/settlementCheckButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="#F9CF9F"
            android:src="@drawable/baseline_receipt_long_24"
            android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정산 확인"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"

        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/menuCustomizationButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F9CF9F"

                android:src="@drawable/baseline_restaurant_menu_24"
                android:textColor="@color/black" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴판 커스텀"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/tableLayoutButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F9CF9F"

                android:src="@drawable/baseline_table_restaurant_24"
                android:textColor="@color/black" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테이블 관리"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/additionalRegistrationButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F9CF9F"
                android:src="@drawable/baseline_format_list_bulleted_add_24"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가등록사항"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray01"
     android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
