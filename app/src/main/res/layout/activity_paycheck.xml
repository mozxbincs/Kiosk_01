<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 층 선택 및 테이블 추가/제거 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <!-- 선택한 층수 표시 TextView -->
        <TextView
            android:id="@+id/selected_floor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[층 선택]"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/floor_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 자리 및 결제 확인 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/other_seater_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="7dp"
            android:text="자리 및 결제 확인"
            android:onClick="onCheckReservationClick"/>
        <TextView
            android:id="@+id/consumer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="7dp"
            android:text="소비자 이메일"
       />

    </LinearLayout>

    <!-- 테이블 목록 및 그리드 레이아웃 -->
    <FrameLayout
        android:id="@+id/table_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="#f0f0f0">
        <!-- 테이블들이 동적으로 추가될 공간 -->
    </FrameLayout>

    <!-- 업데이트 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="start">
        <TextView
            android:textColor="@color/black"
            android:backgroundTint="@color/navy01"
            android:id="@+id/back_activity_admins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_arrow_back_24"/>

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:backgroundTint="@color/navy01"
            android:text="결제하기"
            android:textColor="@color/black"
            android:onClick="onPaymentConfirmClick"/>
    </LinearLayout>
</LinearLayout>
