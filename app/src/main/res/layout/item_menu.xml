<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/menuNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menuImageView"
        android:text="메뉴명" />

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@id/menuNameTextView"
        app:layout_constraintTop_toBottomOf="@id/menuNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/priceTextView"
        android:background="@color/gray01"
        />


    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/menuImageView"
        app:layout_constraintStart_toStartOf="@id/menuNameTextView"
        tools:text="10,000원"
        android:textSize="16sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>