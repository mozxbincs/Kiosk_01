<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/gray01"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_clear_24"
        app:layout_constraintBottom_toTopOf="@id/priceTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menuNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/menuUnderLineView"
        app:layout_constraintStart_toStartOf="@id/menuUnderLineView"
        app:layout_constraintTop_toTopOf="@id/menuImageView"
        tools:text="메뉴명" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/menuNameTextView"
        app:layout_constraintEnd_toEndOf="@id/menuUnderLineView"
        app:layout_constraintTop_toTopOf="@id/menuNameTextView"
        tools:text="5,000원" />

    <View
        android:id="@+id/menuUnderLineView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray01"
        app:layout_constraintBottom_toBottomOf="@id/menuImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menuImageView"
        app:layout_constraintTop_toTopOf="@id/menuImageView" />

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/defaultBackground"
        android:src="@drawable/baseline_remove_24"
        app:layout_constraintBottom_toBottomOf="@id/totalPriceTextView"
        app:layout_constraintStart_toEndOf="@id/menuImageView"
        app:layout_constraintTop_toTopOf="@id/totalPriceTextView" />

    <TextView
        android:id="@+id/menuNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/removeButton"
        app:layout_constraintStart_toEndOf="@id/removeButton"
        app:layout_constraintTop_toTopOf="@id/removeButton"
        tools:text="5개" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/defaultBackground"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@id/menuNumberTextView"
        app:layout_constraintStart_toEndOf="@id/menuNumberTextView"
        app:layout_constraintTop_toTopOf="@id/menuNumberTextView" />

    <TextView
        android:id="@+id/totalPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/menuImageView"
        app:layout_constraintEnd_toEndOf="@id/priceTextView"
        app:layout_constraintStart_toStartOf="@id/priceTextView"
        app:layout_constraintTop_toTopOf="@id/menuUnderLineView"
        tools:text="10,000원" />
</androidx.constraintlayout.widget.ConstraintLayout>