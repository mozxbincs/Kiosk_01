<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <ImageButton
        android:id="@+id/AddInformBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/defaultBackground"
        android:src="@drawable/baseline_arrow_back_24"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/AddInformTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/AddInformTitle" />
    <!-- 추가 등록 사항 -->
    <TextView
        android:id="@+id/AddInformTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="32dp"
        android:text="추가 등록 사항"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 서비스 유형 선택 -->
    <Spinner
        android:id="@+id/AddInformService"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AddInformTitle"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="@id/AddInformService"
        app:layout_constraintEnd_toEndOf="@id/AddInformService"
        app:layout_constraintTop_toTopOf="@id/AddInformService" />

    <!-- 픽업 종류 선택 -->
    <Spinner
        android:id="@+id/AddInformPickUp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AddInformService"
        app:layout_constraintVertical_bias="0.08" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="@id/AddInformPickUp"
        app:layout_constraintEnd_toEndOf="@id/AddInformService"
        app:layout_constraintTop_toTopOf="@id/AddInformPickUp" />

    <!-- 층수 선택 -->
    <Spinner
        android:id="@+id/AddInformFloor"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AddInformPickUp"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="@id/AddInformFloor"
        app:layout_constraintEnd_toEndOf="@id/AddInformService"
        app:layout_constraintTop_toTopOf="@id/AddInformFloor" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        android:hint="주소를 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/AddInformFloor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/spinner_border"
        app:layout_constraintVertical_bias="0.12"/>

    <!-- 회원가입 버튼 -->
    <!--    뒤로가기-->
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/AddInformFinish"
        android:enabled="false"
        android:text="회원가입"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addressEditText"
        app:layout_constraintBottom_toBottomOf="parent"

        android:backgroundTint="#F9CF9F"
     />


</androidx.constraintlayout.widget.ConstraintLayout>
